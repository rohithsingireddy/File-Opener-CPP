{
    "tasks": [
        {
            "type": "shell",
            "label": "Build resource file",
            "command": "glib-compile-resources",
            "args": [
                "--target=resources.c",
                "--generate-source",
                "${fileDirname}/file_opener.gresource.xml"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "detail": "User defined task for generating resource file"
        },
        {
            "type": "shell",
            "label": "Build settings schema",
            "command":"glib-compile-schemas",
            "args":[
                "${fileDirname}/"
            ],
            "options":{
                "cwd" :"${fileDirname}"
            },
            "detail":"User defined task for generating settings schema"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "$(",
                    "pkg-config",
                    "gtkmm-4.0",
                    "--cflags",
                    "--libs",
                ")"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "build",
            "dependsOn": [
                "Build resource file",
                "Build settings schema",
                "C/C++: g++ build active file"
            ]
        }
    ],
    "version": "2.0.0"
}